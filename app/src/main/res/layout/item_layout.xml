<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="12dp"
    card_view:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/travel_thumbnail"
            android:layout_width="150dp"
            android:layout_height="150dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/travel_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingStart="5dp"
                android:text="Las Vegas"
                android:textSize="28sp"
                android:textColor="@color/gray_deep"
                android:textStyle="bold"
                android:gravity="left"
                android:maxLines="2"
                />

            <TextView
                android:id="@+id/travel_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Las vegas office resort"
                android:textSize="15sp"
                android:paddingStart="5dp"
                android:layout_above="@+id/book_type"
                android:textColor="@color/gray_deep"/>


            <TextView
                android:id="@+id/travel_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="N15000"
                android:textSize="15sp"
                android:gravity="end"
                android:layout_marginRight="10dp"
                android:textColor="@color/colorPrimary"/>

        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>
